<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="Nathalie Kaligirwa" id="21050724-add-deleted-at-column-multi-tables">

        <preConditions onFail="WARN">
            <not>
                <columnExists tableName="datasets" columnName="deleted_at"/>
                <columnExists tableName="computations_strategies" columnName="deleted_at"/>
                <columnExists tableName="columns" columnName="deleted_at"/>
            </not>
        </preConditions>
        <addColumn tableName="datasets">
            <column name = "deleted_at" type="timestamp with timezone" defaultValue = "NULL"/>
        </addColumn>
        <addColumn tableName="columns">
            <column name = "deleted_at" type="timestamp with timezone" defaultValue = "NULL"/>
        </addColumn>
        <addColumn tableName="computation_strategies">
            <column name = "deleted_at" type="timestamp with timezone" defaultValue = "NULL"/>
        </addColumn>
        <rollback>
            <dropColumn tableName="datasets" columnName="deleted_at" />
            <dropColumn tableName="columns" columnName="deleted_at" />
            <dropColumn tableName="computation_strategies" columnName="deleted_at" />
        </rollback>
    </changeSet>
</databaseChangeLog>